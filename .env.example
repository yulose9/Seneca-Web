# ===========================================
# Seneca Web - Environment Variables
# ===========================================
# Copy this file to .env and fill in your API keys
# DO NOT commit .env to version control!

# Google Gemini AI API Key
# Get your key at: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Google Maps API Key (optional, for location features)
# Get your key at: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_MAPS_KEY=your_google_maps_key_here

# Firebase Configuration
# Get these from: Project Settings > General > Your apps in Firebase Console
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=1:your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Authorization
VITE_ALLOWED_EMAIL=your_email@gmail.com
